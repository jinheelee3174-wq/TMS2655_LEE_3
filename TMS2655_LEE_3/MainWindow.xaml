<Window x:Class="TMS2655_LEE_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TM2655 혈압측정기 컨트롤러" Height="550" Width="650">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="IP 주소" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtIpAddress" Width="120" Text="172.30.1.52" VerticalAlignment="Center" Margin="0,0,15,0"/>
            <TextBlock Text="포트" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtPort" Width="60" Text="13000" VerticalAlignment="Center" Margin="0,0,15,0"/>
            <Button x:Name="btnConnect" Content="연결하기" Width="80" Click="BtnConnect_Click" Margin="0,0,5,0"/>
            <Button x:Name="btnDisConnect" Content="해제하기" Width="80" Click="BtnDisConnect_Click"/>
        </StackPanel>

        <GroupBox Grid.Row="1" Header="측정 제어" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button x:Name="btnStart" Content="측정 시작 (ST)" Width="100" Margin="0,0,10,0" Click="BtnStart_Click"/>
                <Button x:Name="btnStop" Content="측정 정지 (SP)" Width="100" Margin="0,0,10,0" Click="BtnStop_Click"/>
                <Button x:Name="btnGetResult" Content="결과 받기 (RB)" Width="100" Click="BtnGetResult_Click"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="통신 로그 및 결과">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel x:Name="ResultArea" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10" Background="White">
                    <TextBlock Text="최고" VerticalAlignment="Center" FontSize="16" Margin="10,0,5,0"/>
                    <TextBlock x:Name="lblSys" Text=":" FontSize="20" FontWeight="Bold" Foreground="Black" Width="50"/>

                    <TextBlock Text="최저" VerticalAlignment="Center" FontSize="16" Margin="10,0,5,0"/>
                    <TextBlock x:Name="lblDia" Text=":" FontSize="20" FontWeight="Bold" Foreground="Black" Width="50"/>

                    <TextBlock Text="평균" VerticalAlignment="Center" FontSize="16" Margin="10,0,5,0"/>
                    <TextBlock x:Name="lblaverage" Text=":" FontSize="20" FontWeight="Bold" Foreground="Black" Width="50"/>

                    <TextBlock Text="심박" VerticalAlignment="Center" FontSize="16" Margin="10,0,5,0"/>
                    <TextBlock x:Name="lblPulse" Text=":" FontSize="20" FontWeight="Bold" Foreground="Black" Width="50"/>
                </StackPanel>
                <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
                    
                    <TextBlock x:Name="txtLog" TextWrapping="Wrap" Background="#F0F0F0" Padding="10"/>
                </ScrollViewer>
            </Grid>
        </GroupBox>

        <DockPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="저장 경로" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Button x:Name="btnBrowse" Content="찾아보기..." DockPanel.Dock="Right" Width="80" Click="BtnBrowse_Click"/>
            <TextBox x:Name="txtSavePath" Margin="5,0" VerticalContentAlignment="Center" IsReadOnly="True" Text="C:\Temp"/>
        </DockPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnSaveImage" Content="JPG 저장" Width="150" Height="30" Click="BtnSaveImage_Click"/>
        </StackPanel>
    </Grid>
</Window>